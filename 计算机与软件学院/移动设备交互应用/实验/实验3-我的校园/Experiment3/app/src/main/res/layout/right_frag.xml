<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3C4C4"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/right_frag_top"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#fff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contentLayout"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#fff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#c70e5c"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="教师事务"
                        android:textColor="#fff" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#fff" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:background="#eee0e5"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="·办事大厅\n"
                        android:textColor="#000"
                        android:id="@+id/task1_1"
                        android:clickable="true"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#eee0e5"
                        android:id="@+id/right1"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:textSize="12sp"
                        android:text="·教师邮箱\n\n·本科生教务\n\n·研究生教务\n\n·Blackboard\n\n·OA系统\n\n·科学技术\n\n·社会科学\n\n·人力资源\n\n·实验设备\n\n·设备共享\n\n·财务服务\n\n·采标采购"
                        android:textColor="#000" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/down"
                        android:background="#eee0e5"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#fff" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/a"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"/>

                </LinearLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#fff" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e64f80"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="学生事务"
                        android:textColor="#fff" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#fff" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#eee0e5"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:id="@+id/right2"
                        android:textSize="12sp"
                        android:text="·UOOC课程\n\n·学生邮箱@\n\n·本科生选课\n\n·研究生选课\n\n·事务中心\n\n·学生工作\n\n·公寓管理\n\n·宿舍申请\n\n·缴学杂费\n\n·考研考博\n\n·就业指导\n\n·学生会\n\n·研究生会"
                        android:textColor="#000" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/down"
                        android:background="#eee0e5"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#fff" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/b"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"/>

                </LinearLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#fff" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#c70e5c"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="荔园生活"
                        android:textColor="#fff" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#fff" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#eee0e5"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:id="@+id/right3"
                        android:textSize="12sp"
                        android:text="·荔园晨风\n\n·深大义工\n\n·学科竞赛\n\n·学生创业\n\n·素质教育\n\n·工会活动\n\n·深大校报\n\n·网上电视\n\n·广播电台\n\n·视频校园\n\n·体育场馆\n\n·国际交流\n\n·总医院"
                        android:textColor="#000" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/down"
                        android:background="#eee0e5"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#fff" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/c"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"/>

                </LinearLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#fff" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e64f80"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="网上服务"
                        android:textColor="#fff" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#fff" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#eee0e5"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:textSize="12sp"
                        android:id="@+id/right4"
                        android:text="·图书馆\n\n·校园网络\n\n·自助服务\n\n·校务信箱\n\n·短信平台\n\n·会议室申请\n\n·校园卡\n\n·故障报修\n\n·失物招领\n\n·后勤服务\n\n·基金会\n\n·深大纪念品\n\n·中行网银"
                        android:textColor="#000" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/down"
                        android:background="#eee0e5"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="#fff" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/d"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"/>

                </LinearLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#fff" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="#fff" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#fff" />

</LinearLayout>